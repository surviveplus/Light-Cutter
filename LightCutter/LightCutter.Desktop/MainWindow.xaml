<Window x:Class="Net.Surviveplus.LightCutter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Net.Surviveplus.LightCutter.Desktop"
        mc:Ignorable="d"
        Title="Light Cutter " 
        Height="200" Width="450"
        Icon="LightCutter Ver.6.ico"
        Loaded="Window_Loaded" >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="10,10,10,10" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button x:Name="CutAndCopyButton" Click="CutAndCopyButton_Click">Freeze Screen => Cut by Mouse => Copy</Button>
        <Button x:Name="CutAndSaveButton" Click="CutAndSaveButton_Click" >
            <TextBlock TextAlignment="Center">
            Freeze Screen => Cut by Mouse => Save a File on desktop  <LineBreak/>
            ( Ctrl + Shift + Alt + A )
            </TextBlock>
        </Button>
        <Button x:Name="CountdownCutAndSaveButton" Click="CountdownCutAndSaveButton_Click">Countdown 3s. => Freeze Screen => Cut by Mouse => Save a File on desktop</Button>
    </StackPanel>
</Window>

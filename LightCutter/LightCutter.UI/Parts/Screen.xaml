<UserControl x:Class="Net.Surviveplus.LightCutter.UI.Parts.Screen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Net.Surviveplus.LightCutter.UI.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid Width="16" Height="20">
        <Grid.RenderTransform>
            <TranslateTransform X="0" Y="5"></TranslateTransform>
        </Grid.RenderTransform>
        <TextBlock x:Name="text" />
        <Rectangle Stroke="{Binding ElementName=text, Path=Foreground}" Width="16" Height="11" StrokeThickness="1.5" Margin="0,4,0,5"/>
        <Rectangle Fill="{Binding ElementName=text, Path=Foreground}" Width="2" Height="1" Margin="7,15,7,4" />
        <Rectangle Fill="{Binding ElementName=text, Path=Foreground}" Width="8" Height="1" Margin="4,16,4,3" />
    </Grid>
</UserControl>

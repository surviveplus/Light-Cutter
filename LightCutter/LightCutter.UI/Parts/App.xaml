<UserControl x:Class="Net.Surviveplus.LightCutter.UI.Parts.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Net.Surviveplus.LightCutter.UI.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid Width="16" Height="20">
        <Grid.RenderTransform>
            <TranslateTransform X="0" Y="5"></TranslateTransform>
        </Grid.RenderTransform>
        <TextBlock x:Name="text" />
        <Rectangle Stroke="{Binding Foreground, ElementName=text}" StrokeThickness="1.5" Margin="1,8,1,3"  />
        <Rectangle Stroke="{Binding Foreground, ElementName=text}" StrokeThickness="1" Margin="1,4,1,11"  />

        <Rectangle Fill="{Binding Foreground, ElementName=text}" Margin="12,6,3,13" />
        <Rectangle Fill="{Binding Foreground, ElementName=text}" Margin="10,6,5,13" />

    </Grid>
</UserControl>

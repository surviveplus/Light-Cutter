<Window x:Class="OcrSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcrSample"
        mc:Ignorable="d"
        Title="OCR Sample in WPF" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="resultBlock"></TextBlock>
        <Button Grid.Row="1" x:Name="doButton" Click="DoButton_Click" >Recognize image file</Button>
    </Grid>
</Window>

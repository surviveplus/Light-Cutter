<Window x:Class="TalkSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalkSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button x:Name="say3" Tag="3" Click="TalkButtons_Click">3</Button>
        <Button x:Name="say2" Tag="2" Click="TalkButtons_Click">2</Button>
        <Button x:Name="say1" Tag="1" Click="TalkButtons_Click">1</Button>
        <Button x:Name="sayStart" Tag="Start" Click="TalkButtons_Click">Start</Button>
        
        <Button x:Name="countDown" Click="CountDown_Click" >Count Down</Button>
    </StackPanel>
</Window>
